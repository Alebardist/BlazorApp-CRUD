@page "/Read"
@using ServerDataBase;

<h3>Read</h3>

<div>
    <div>
        @foreach (var item in articles)
        {
            <div>
                <h3>
                    @item.Name
                </h3>
                <div>
                    @item.Text
                </div>
                <span class="alert-success">@item.Likes</span>
                / 
                <span class="alert-danger">@item.Dislikes</span> 
            </div>
        }
    </div>
</div>

@code {
    List<Article> articles;
    protected override Task OnInitializedAsync()
    {
        articles = new DataBaseCRUD().Read<Article>();
        return Task.CompletedTask;
    }
}
